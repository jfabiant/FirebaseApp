<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_picture"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                tools:src="@drawable/ic_profile"
                app:civ_border_color="@android:color/darker_gray"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/user_displayname"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/user_picture"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="John.timoteo@tecsup.edu.pe" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/user_displayname"
                android:gravity="center_vertical|end"
                tools:text="22 Km"/>


        </RelativeLayout>
        <Button
            android:id="@+id/btn_mapear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:text="Ver ubicaciÃ³n"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

